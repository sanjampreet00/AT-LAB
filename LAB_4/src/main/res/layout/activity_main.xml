<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="212dp"
        tools:layout_editor_absoluteY="305dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Quiz"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Which of these is a green-colored vegetable?"
                android:textSize="18sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/r1"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:onClick="onRadioButtonClicked"
                    android:text="Tomato"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/r2"
                    android:onClick="onRadioButtonClicked"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="Potato"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/r3"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:onClick="onRadioButtonClicked"
                    android:text="Onions"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/r4"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="Peas"
                    android:textSize="12sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="What is the Color of the Leaves?"
                android:textSize="18sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/r5"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="Blue"
                    android:onClick="onRadioButtonClicked"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/r6"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="Red"
                    android:onClick="onRadioButtonClicked"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/r7"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="Purple"
                    android:onClick="onRadioButtonClicked"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/r8"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="Green"
                    android:onClick="onRadioButtonClicked"
                    android:textSize="12sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Who is the king of the jungle?"
                android:textSize="18sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/r9"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:onClick="onRadioButtonClicked"
                    android:text="Deer"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/r10"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="Bear"
                    android:onClick="onRadioButtonClicked"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/r11"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="Lion"
                    android:onClick="onRadioButtonClicked"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/r12"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="Rabbit"
                    android:onClick="onRadioButtonClicked"
                    android:textSize="12sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="What is the color of sunflowers?"
                android:textSize="18sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/r13"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="Yellow"
                    android:onClick="onRadioButtonClicked"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/r14"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="Green"
                    android:onClick="onRadioButtonClicked"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/r15"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="Pink"
                    android:onClick="onRadioButtonClicked"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/r16"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:onClick="onRadioButtonClicked"
                    android:text="Red"
                    android:textSize="12sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Which part of your body do you use to see?"
                android:textSize="18sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/r17"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:onClick="onRadioButtonClicked"
                    android:text="Eyes"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/r18"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:onClick="onRadioButtonClicked"
                    android:text="Ears"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/r19"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:onClick="onRadioButtonClicked"
                    android:text="Heart"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/r20"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:onClick="onRadioButtonClicked"
                    android:text="Nose"
                    android:textSize="12sp" />
            </RadioGroup>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onclick"
                android:text="Submit" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>